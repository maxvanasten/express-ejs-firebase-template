<!-- @format -->

<div class="container-fluid border border-secondary">
  <div class="row align-items-center">
    <div class="col-3">
      <p class="display-3">Webapp</p>
    </div>
    <div class="col-1">
      <a href="/" class="btn btn-primary w-100">Home</a>
    </div>
    <% if (locals.logged_in.status == false) { %>
    <div class="col-1 offset-6">
      <a href="/login" class="btn btn-warning w-100">Login</a>
    </div>
    <div class="col-1">
      <a href="/register" class="btn btn-success w-100">Register</a>
    </div>
    <% } else { %>
    <div class="col-1 offset-6">
      <a href="/hidden" class="btn btn-success w-100">Hidden</a>
    </div>
    <div class="col-1">
      <a href="/sessionLogout" class="btn btn-danger w-100">Logout</a>
    </div>
    <% } %>
  </div>
</div>
